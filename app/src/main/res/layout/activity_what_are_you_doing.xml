<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".whatAreYouDoingActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_home_screen2"/>
        <TextView
                android:text="What Are You Doing?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/head_whatAreYouDoing"
                android:textAlignment="center"/>
        <Spinner
                android:layout_width="395dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="274dp"
                tools:layout_editor_absoluteX="8dp" android:id="@+id/doing_spinner" android:spinnerMode="dropdown"
                android:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>